<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/BackgroundStyle"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/emi"
                android:layout_weight="1.25"
                android:layout_marginLeft="10sp"
                android:background="@drawable/emi_logob"/>

            <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:text="@string/emibot"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/myWhite"
            android:background="@drawable/emi_borders"
            android:layout_marginHorizontal="5sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/robotica_educativa"
            android:textColor="@color/myWhite"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/robotica_educativab"
            android:layout_marginTop="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4"
            android:gravity="center">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_btn"
                android:background="@drawable/emi_borders"
                android:textColor="@color/myWhite"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disconnect_button"
                android:background="@drawable/emi_borders"
                android:textColor="@color/myWhite"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clean_btn"
                android:background="@drawable/emi_borders"
                android:textColor="@color/myWhite"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exit_btn"
                android:background="@drawable/emi_borders"
                android:textColor="@color/myWhite"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_marginHorizontal="100dp"
            android:gravity="center">
            <TableRow>
                <Button
                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
                <Button
                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
                <Button
                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
            </TableRow>
            <TableRow
                android:layout_marginVertical="2.5dp">
                <Button
                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
                <Button
                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
                <Button
                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
            </TableRow>
            <TableRow
                android:layout_marginVertical="2.5dp">
                <Button
                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
                <Button
                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
                <Button

                    android:background="@drawable/arrow_btns"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/myWhite"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>